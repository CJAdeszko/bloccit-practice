<h1>Sign Up Confirmation</h1>

<div class="row">
  <div class="col-md-6">
    <h3>Are you sure these values are correct?</h3>
    <br/>
    <h4>Name: <%= @user.name %></h4>
    <h4>Email: <%= @user.email %></h4>
  </div>
</div>

<div class="row">
  <div class="btn-group">
    <div class= "col-md-4">
      <%= button_to "Yes", { controller: "users", action: "create", params: { user: user_params } }, class: 'btn btn-success' %>
    </div>
    <div class="col-md-4">
      <%= button_to "No", { controller: "users", action: "new"}, class: 'btn btn-warning', method: :get %>
    </div>
  </div>
</div>
