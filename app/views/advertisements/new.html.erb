<h1>Create a new Advertisement</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @ad do |a| %>
      <div class="form-group">
        <%= a.label :title %>
        <%= a.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= a.label :copy %>
        <%= a.text_area :copy, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= a.label :price %>
        <%= a.number_field :price, in: 1..10001, class: 'form-control' %>
      </div>

      <%= a.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
