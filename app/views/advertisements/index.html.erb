<h1>Advertisements</h1>

<button class="btn btn-link btn-large"><%= link_to "Create New Ad", new_advertisement_path %></button>

<% @advertisements.each do |ad|  %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <p><%= link_to ad.title, ad%></p>
      </h4>
    </div>
  </div>
<% end %>
